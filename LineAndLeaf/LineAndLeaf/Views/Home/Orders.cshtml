@{
    ViewData["Title"] = "My Orders"; // Set the page title
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UGroLife - @ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/order.css" rel="stylesheet" />
    <link href="~/css/common.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/order.js"></script>
    <script src="~/js/common.js"></script>
</head>
<body>

    <div id="messageModal" class="modal-overlay">
        <div class="modal-content">
            <h3 id="modalTitle" class="text-2xl font-bold mb-4" style="color: #0cae00"></h3>
            <p id="modalMessage" class="mb-6" style="color:black"></p>
            <button id="closeModal" class="btn-primary">Got It!</button>
        </div>
    </div>

    <header class="bg-white shadow-sm py-4 px-6 md:px-8 sticky top-0 z-50 rounded-b-lg">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/Home/Index" class="flex items-center space-x-2 text-[#0cae00] hover:text-green-900 transition duration-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span class="font-medium">Back to Home</span>
            </a>
            <h1 class="text-2xl font-bold text-[#0cae00]">My Orders</h1>
            <div></div>
        </div>
    </header>

    <main class="flex-grow container mx-auto p-4 md:p-8 max-w-screen-xl">
        <div id="ordersContainer" class="mt-8">
            <div id="ordersList" class="grid grid-cols-3 gap-6"> </div>
        </div>
    </main>

    <footer class="text-gray-800 py-6 px-4 md:px-8 text-center bg-gray-100 mt-auto">
        <div class="container mx-auto">
            &copy; 2025 UGroLife. All rights reserved.
        </div>
    </footer>
   
</body>
</html>
